{% extends 'base.html.twig' %}
{% block content %}

<div class="container">
    <h1 class="book-title">Reading list</h1>
    <div class="subcontainer">
    {% if list is null or list[0]|length == 0 %}
        <p>There are no books in the reading list.</p>
    {% else %}
        <table>
            {% for index in 0..(list[0]|length - 1) %}
                <tr class="reading-book" Onclick="switchPage( '/book-info/{{ list[0][index] }}' )">
                    <td class="book-cover"><img class="image-book-reading-list" src="{{ list[4][index] }}" alt="cover" ></td>
                    <td class="book-text">
                        <b>{{ list[1][index] }}</b>
                        <p class="book-summary">{{ list[2][index] }}</p>
                        <b>By {{ list[3][index] }}</b>
                    </td>

                </tr>
            {% endfor %}
        </table>
    {% endif %}
    </div>
</div>

    <script src="{{ asset('js/openBookPage.js') }}"></script>
{% endblock %}


